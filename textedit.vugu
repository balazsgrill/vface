<div :class='c.Class'>
    <input vg-if='c.editing && !c.Multiline' type="text" :class='c.Class' :value='c.Model.Content' @focusout='c.focusLost(event)' vg-js-create='setFocus(value)'></input>
    <textarea vg-if='c.editing && c.Multiline' vg-content='c.Model.Content' @focusout='c.focusLost(event)' vg-js-create="setFocus(value)" :class='c.Class'></textarea>
    <span vg-if="!c.editing" :class='c.Class' vg-content='c.Model.Content' @click='c.onClick(event)'></span>
</div>