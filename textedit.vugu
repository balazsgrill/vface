<div :class='c.Class'>
    <input vg-if='c.editing && !c.Multiline' type="text" :class='c.Class' :value='c.Model.GetContent()' @focusout='c.focusLost(event)' vg-js-create='setFocus(value)' :list='c.datalistID()'></input>
    <textarea vg-if='c.editing && c.Multiline' vg-content='c.Model.GetContent()' @focusout='c.focusLost(event)' vg-js-create="setFocus(value)" :class='c.Class'></textarea>
    <span vg-if="!c.editing" :class='c.displayClass()' vg-content='c.displayContent()' @click='c.onClick(event)'></span>
    <datalist vg-if='len(c.Model.Datalist())>0' :id='c.datalistID()'>
        <option vg-for='_, option := range c.Model.Datalist()' :value='option'></option>
    </datalist>
</div>